@model IEnumerable<KursKayit>

<h2>Kurs KayÄ±t Listesi</h2>

<hr>
<a href="/KursKayit/Create" class="btn btn-sm btn-outline-primary">Kurs Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">
                @Html.DisplayNameFor(m => m.KayitId)

            </th>
            <th>
                @Html.DisplayNameFor(m => m.Ogrenci.OgrenciAd)

            </th>
            <th>
                @Html.DisplayNameFor(m => m.Kurs.Baslik)

            </th>
            <th style="width: 150px;">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KayitId)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Ogrenci.OgrenciAd)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Kurs.Baslik)
                </td>
                <td>
                    <a  asp-action="Edit" asp-route-id="@item.KayitId" class="btn btn-sm btn btn-success">Edit</a>
                    <a  asp-action="Delete" asp-route-id="@item.KayitId" class="btn btn-sm btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>